{
    "apiVersion": "0.0.1",
    "swaggerVersion": "1.2",
    "basePath": "{$Host}",
    "resourcePath": "/test",
    "produces": [
        "application/json",
        "application/xml"
    ],
    "apis": [
        {
            "path": "/test/invoke{name}",
            "operations": [
                {
                    "method": "POST",
                    "summary": "Run OSv test",
                    "notes": "return test result",
                    "responseClass": "Result",
                    "nickname": "runTest",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ],
                    "parameters": [          
                        {
                            "id": "name",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ]
                }
            ],
            "responseMessages":[
                {
                    "code": 200,
                    "message": "OK",
                    "responseModel": "Test"
                },
                {
                    "code": 202,
                    "message": "Accepted"
                },
                {
                    "code": 404,
                    "message": "Test not found"
                }
            ]
        },
        {
            "path": "/tests",
            "operations": [
                {
                    "method": "GET",
                    "summary": "return list of all avilable tests",
                    "responseClass": "Tests",
                    "nickname": "listTests",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ]
                }
            ]
        }
    ],
    "models" : {
        "Result": {
            "id": "Result",
            "properties": {
                "success": {
                    "type": "boolean",
                    "description": "test result: true is success, false is fail"
                },
                "time": {
                    "type": "long",
                    "description": "test execution time"
                },
                "text": {
                    "type": "string",
                    "description": "test traces"
                }
            }
        },
        "Tests": {
            "properties": {
                 "files": {
                     "type": "array",
                     "items":{"type":"string"},
                     "description": "list of tests" 
                 }
            }
        }
    }
}
